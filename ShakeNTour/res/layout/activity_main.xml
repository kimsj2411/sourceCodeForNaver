<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    android:clickable="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AttendActivity" >

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23dp"
        android:adjustViewBounds="true"
        android:background="@drawable/vote1_selector"
        android:scaleType="fitStart" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="152dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_marginLeft="20dp"
        android:adjustViewBounds="true"
        android:background="@drawable/attend1_selector"
        android:scaleType="fitStart" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="195dp"
        android:layout_height="147dp"
        android:layout_alignBottom="@+id/imageButton4"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_marginBottom="125dp"
        android:adjustViewBounds="true"
        android:background="@drawable/login1_selector"
        android:scaleType="fitStart" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="158dp"
        android:layout_height="142dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageButton1"
        android:layout_marginBottom="115dp"
        android:layout_marginRight="14dp"
        android:adjustViewBounds="true"
        android:background="@drawable/notice1_selector"
        android:scaleType="fitStart" />

</RelativeLayout>